    {
      "label": "pnpm:test:watch",
      "type": "npm",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "group": "test",
        "clear": true,
        "close": true
      },
      "group": "test",
      "script": "test:watch",
      "isBackground": false,
      "detail": "Test the package",
      "dependsOn": "pnpm:lint",
      "runOptions": {
        "runOn": "folderOpen",
        "instanceLimit": 1
      }
    }
  ]
