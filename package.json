{
  "name": "@bemedev/vitest-extended",
  "version": "0.5.1",
  "description": "Extensions to build tests in jest",
  "type": "module",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "scripts": {
    "build": "pnpm run lib:rm && pnpm run rollup",
    "build:pack": "pnpm run rm && pnpm run config:off && pnpm run build && pnpm run pack",
    "ci": "pnpm run build:pack && pnpm run lint && pnpm run test && pnpm run build",
    "ci:online": "pnpm run config && pnpm run lint && pnpm run test && pnpm run build",
    "config": "pnpm install",
    "config:off": "pnpm run config --offline",
    "eslint": "eslint ",
    "lib:rm": "rm -rf lib",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "pack": "tsx ./.pack/toPack.ts",
    "p-q": "pretty-quick --staged",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "rinit": "pnpm run rm && pnpm run config",
    "rinit:off": "pnpm run rinit --offline",
    "rm": "rm -rf node_modules pnpm-lock.yaml",
    "rollup": "rollup -c",
    "test": "pnpm run test:coverage --no-coverage",
    "test:coverage": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "upgrade": "pnpm upgrade --latest && pnpm add xstate@4.38.3 --offline",
    "prepare": "husky"
  },
  "keywords": [
    "jest",
    "test",
    "test.each",
    "loop",
    "Test acceptation",
    "describe",
    "expect"
  ],
  "files": [
    "lib",
    "public"
  ],
  "author": {
    "email": "bri_lvi@icloud.com",
    "name": "Charles-LÃ©vi BRI",
    "url": "https://cv-chlbri-bemedev.vercel.app"
  },
  "license": "MIT",
  "devDependencies": {
    "@bemedev/vitest-alias": "^0.0.3",
    "@bemedev/vitest-exclude": "^0.0.2",
    "@types/edit-json-file": "^1.7.3",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "dequal": "^2.0.3",
    "edit-json-file": "^1.8.0",
    "eslint": "^9.17.0",
    "glob": "^11.0.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "pretty-quick": "^4.0.0",
    "rollup": "^4.30.1",
    "rollup-plugin-circular-dependencies": "^1.1.2",
    "rollup-plugin-node-externals": "^8.0.0",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "rxjs": "^7.8.1",
    "shelljs": "^0.8.5",
    "terser": "^5.37.0",
    "this1": "file:./.pack/bemedev-vitest-extended-0.5.1.tgz",
    "tsc-alias": "^1.8.10",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8",
    "xstate": "4.38.3",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "vitest": "^1.5.0"
  },
  "dependencies": {
    "@bemedev/sleep": "^0.1.2",
    "@bemedev/types": "^0.1.3"
  }
}
