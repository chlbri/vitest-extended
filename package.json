{
  "name": "@bemedev/vitest-extended",
  "version": "1.5.3",
  "description": "Extensions to build tests in vitest",
  "type": "module",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/chlbri/vitest-extended"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    },
    "./*": {
      "types": "./lib/*.d.ts",
      "import": "./lib/*.js",
      "require": "./lib/*.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "pnpm run lib:rm && pnpm run rollup",
    "ci": "pnpm run lint && pnpm run test && pnpm run prettier && pnpm run p-q",
    "ci:admin": "pnpm run upgrade && pnpm run ci",
    "config": "pnpm install",
    "config:off": "pnpm run config --offline",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "lib:rm": "rm -rf lib",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "p-q": "pretty-quick",
    "pretest": "pnpm run build && pnpm run size",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "rinit": "pnpm run rm && pnpm run config",
    "rinit:off": "pnpm run rinit --offline",
    "rm": "rm -rf node_modules pnpm-lock.yaml",
    "rollup": "rollup -c",
    "test": "pnpm run test:coverage --no-coverage",
    "test:coverage": "vitest run",
    "size": "size-limit",
    "test:watch": "vitest",
    "upgrade": "pnpm upgrade --latest",
    "prepare": "husky"
  },
  "size-limit": [
    {
      "path": "lib/*.js",
      "limit": "10 KB"
    },
    {
      "path": "lib/*.cjs",
      "limit": "10 KB"
    }
  ],
  "keywords": [
    "vitest",
    "test",
    "test.each",
    "loop",
    "Test acceptation",
    "describe",
    "expect",
    "timer",
    "fake"
  ],
  "files": [
    "lib",
    "public",
    "README.md",
    "LICENSE",
    "CHANGE_LOG.md"
  ],
  "author": {
    "email": "bri_lvi@icloud.com",
    "name": "Charles-LÃ©vi BRI",
    "url": "https://cv-chlbri-bemedev.vercel.app"
  },
  "license": "MIT",
  "devDependencies": {
    "@bemedev/app-ts": "^0.9.21",
    "@bemedev/basifun": "^0.5.3",
    "@bemedev/rollup-config": "^0.2.1",
    "@bemedev/vitest-alias": "^0.0.3",
    "@bemedev/vitest-exclude": "^0.1.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/edit-json-file": "^1.7.3",
    "@types/shelljs": "^0.8.17",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dequal": "^2.0.3",
    "edit-json-file": "^1.8.1",
    "eslint": "^9.35.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "rollup": "^4.50.0",
    "rollup-plugin-circular-dependencies": "^1.1.2",
    "rollup-plugin-node-externals": "^8.1.1",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "rxjs": "^7.8.2",
    "shelljs": "^0.10.0",
    "size-limit": "^11.2.0",
    "terser": "^5.44.0",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "zod": "^4.1.5"
  },
  "peerDependencies": {
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@bemedev/sleep": "^0.1.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
